    transform: translateY(-9px) rotate(-45deg);
  }

  .menu-panel {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: auto;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(4px);
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 5rem 0 2rem 0;
    transform: translateY(-100%);
    opacity: 0;
    pointer-events: none;
    transition:
