    nextBtn && (nextBtn.onclick = () => { idx = Math.min(idx + 1, Math.max(0, cards.length - 3)); update(); });
    document.addEventListener('keydown', e => {
      if(e.key === 'ArrowLeft'){ idx = Math.max(0, idx - 1); update(); }
      if(e.key === 'ArrowRight'){ idx = Math.min(idx + 1, Math.max(0, cards.length - 3)); update(); }
    });
    window.addEventListener('resize', update);
    update();
  })();

  (() => {
    const wrapper = document.getElementById("playerWrapper");
    const slides = Array.from(document.querySelectorAll(".player-slide"));
    const next = document.getElementById("playerNext");
    const prev = document.getElementById("playerPrev");

    let index = 0;

    function scrollToIndex() {
      const width = wrapper.clientWidth;
      wrapper.scrollTo({
        left: index * width,
        behavior: "smooth",
      });
    }

    next?.addEventListener("click", () => {
      index = Math.min(index + 1, slides.length - 1);
      scrollToIndex();
    });

    prev?.addEventListener("click", () => {
      index = Math.max(index - 1, 0);
      scrollToIndex();
    });

    wrapper.addEventListener("scroll", () => {
      index = Math.round(wrapper.scrollLeft / wrapper.clientWidth);
    });
  })();
