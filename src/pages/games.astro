---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer.astro";

interface Game {
  id: number;
  title?: string;
  img?: string;
}

const SUPABASE_URL = "https://wxjylkvjfnoijclnsffw.supabase.co";
const SUPABASE_KEY = import.meta.env.PUBLIC_SUPABASE_KEY || "sb_secret_jAuh8XhtJtcsYsH5yPDOYw_igg62J3R";

let games: Game[] = [];
let fetchError = "";

try {
  const res = await fetch(`${SUPABASE_URL}/rest/v1/games?select=*`, {
    headers: {
      apikey: SUPABASE_KEY,
    },
  });

  if (!res.ok) {
    const errorText = await res.text();
    fetchError = `Supabase fetch failed: ${res.status} - ${errorText}`;
  } else {
    const data = await res.json();
    games = Array.isArray(data) ? data : [];
  }
} catch (err) {
  fetchError = `Supabase fetch error: ${err}`;
}
---

<Layout>
  <main class="games-page">
    <section class="games-header">
      <h1 class="games-title">GAMES</h1>
      <p class="games-subtitle">In association with Trackman</p>
      <div class="games-icon">
        <img src="/timeglas.gif" alt="Timeglas" />
      </div>
    </section>

    <section class="games-grid">
      {
        fetchError ? (
          <p class="games-empty">{fetchError}</p>
        ) : games.length === 0 ? (
          <p class="games-empty">Der er ingen games endnu â€“ tjek Supabase tabellen.</p>
        ) : (
          games.map((game) => {
            if (!game.img) return null;

            return (
              <a href={`/${game.id}`} class="game-card">
                <img src={game.img} alt={game.title ?? "Game"} loading="lazy" />
              </a>
            );
          })
        )
      }
    </section>
  </main>

  <Footer />

  <style>
    *,
    *::before,
    *::after {
      box-sizing: border-box;
    }

    /* ===== PAGE LAYOUT ===== */

    .games-page {
      min-height: 100vh;
      width: 100%;
      padding: 11.5rem 1.5rem 4rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .games-header {
      margin-bottom: 2.5rem;
    }

    /* H1 arver global PixelifySans */
    .games-title {
      font-size: clamp(2.8rem, 4vw, 3.6rem);
      letter-spacing: 0.12em;
      margin: 0;
      text-transform: uppercase;
      text-shadow: 0 0 14px rgba(255, 255, 255, 0.4);
    }

    .games-subtitle {
      margin-top: 0.5rem;
      font-size: 1.1rem;
      opacity: 0.9;
    }

    .games-icon {
      margin-top: 1.8rem;
      display: flex;
      justify-content: center;
    }

    .games-icon img {
      width: 80px;
      height: auto;
      opacity: 0.9;
    }

    /* ===== GRID ===== */

    .games-grid {
      margin-top: 3rem;
      width: 100%;
      max-width: 1100px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 2.6rem;
      justify-items: center;
    }

    /* ===== CARD ===== */

    .game-card {
      width: 100%;
      max-width: 230px;
      aspect-ratio: 3 / 4;
      border-radius: 22px;
      overflow: hidden;
      position: relative;
      background: radial-gradient(circle at top, rgba(120, 40, 200, 0.75), rgba(5, 8, 30, 0.98));
      box-shadow:
        0 0 18px rgba(232, 3, 178, 0.5),
        0 0 32px rgba(0, 200, 255, 0.35),
        inset 0 0 20px rgba(255, 255, 255, 0.1);
      display: block;
      filter: drop-shadow(0 0 12px rgba(120, 0, 255, 0.4));
      animation: floaty 4s ease-in-out infinite;
      transition:
        transform 0.3s ease,
        box-shadow 0.3s ease,
        filter 0.3s ease;
    }

    .game-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .game-card:hover {
      transform: translateY(-14px) scale(1.05) rotateZ(-1.5deg);
      box-shadow:
        0 0 35px rgba(232, 3, 178, 0.9),
        0 0 60px rgba(0, 220, 255, 0.65),
        inset 0 0 32px rgba(255, 255, 255, 0.25);
      filter: drop-shadow(0 0 28px rgba(170, 0, 255, 0.75));
    }

    .games-empty {
      opacity: 0.8;
      font-size: 0.95rem;
    }

    /* ===== ANIMATION ===== */

    @keyframes floaty {
      0% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-6px);
      }
      100% {
        transform: translateY(0);
      }
    }

    /* ===== RESPONSIVE ===== */

    @media (min-width: 900px) {
      .games-grid {
        grid-template-columns: repeat(4, minmax(0, 1fr));
      }
    }

    @media (max-width: 768px) {
      .games-grid {
        gap: 1rem;
      }
    }
  </style>
</Layout>
