---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>The Clubhouse</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Aldrich&display=swap" rel="stylesheet" />

    <link
      rel="preload"
      href="/fonts/ARCADECLASSIC2.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>

  <body>
    <!-- simpel preloader, bare så siden ikke blinker -->
    <div id="preloader">
      <img src="/timeglas.gif" alt="Loading" />
    </div>

    <Header />

    <!-- alt indhold lever her, så footeren altid havner nederst -->
    <main class="site-main">
      <slot />
    </main>

    <Footer />

    <script>
      const preloader = document.getElementById("preloader");
      window.addEventListener("load", () => {
        if (!preloader) return;
        preloader.classList.add("hidden");
        setTimeout(() => preloader.remove(), 500);
      });
    </script>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "ArcadeClassic";
    src: url("/fonts/ARCADECLASSIC2.woff2") format("woff2");
    font-display: swap;
  }

  html, body {
    margin: 0;
    padding: 0;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: url("/baggrund.gif") center / cover no-repeat fixed;
    color: #fff;
    font-family: "Aldrich", sans-serif;
  }

  .site-main {
    flex: 1;
    width: 100%;
  }

  h1 {
    font-family: "PixelifySans", monospace;
    letter-spacing: 2px;
  }

  #preloader {
    position: fixed;
    inset: 0;
    background: #000;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    transition: opacity 0.4s ease;
  }

  #preloader.hidden {
    opacity: 0;
    pointer-events: none;
  }
</style>
