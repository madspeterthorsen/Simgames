---
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>The Clubhouse</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Aldrich&display=swap" rel="stylesheet" />
    <link
  rel="preload"
  href="/fonts/ARCADECLASSIC2.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>

  </head>

  <body>
    <div id="preloader">
      <div class="preloader-content">
        <img src="/timeglas.gif" alt="Loading Simgames" class="preloader-gif" />
        <p class="preloader-text">Loading Simgames...</p>
      </div>
    </div>

    <Header />
    <slot />

    <script>
      const MIN_TIME = 1500;   // ms – så den ikke blinker
      const MAX_TIME = 2000;  // ms – absolut max
    
      const start = performance.now();
      const preloader = document.getElementById("preloader");
    
      function hidePreloader() {
        if (!preloader) return;
    
        preloader.classList.add("hidden");
    
        setTimeout(() => {
          preloader.remove();
        }, 500);
      }
    
      // 1️⃣ Når DOM er klar (hurtig)
      document.addEventListener("DOMContentLoaded", () => {
        const elapsed = performance.now() - start;
        const remaining = Math.max(MIN_TIME - elapsed, 0);
    
        setTimeout(hidePreloader, remaining);
      });
    
      // 2️⃣ Fallback – hvis noget går galt
      setTimeout(hidePreloader, MAX_TIME);

      // Global scroll-reveal effekt (ligesom i Toki-projektet)
      document.addEventListener("DOMContentLoaded", () => {
        const revealEls = document.querySelectorAll(".reveal");
        if (!revealEls.length) return;

        const observer = new IntersectionObserver(
          (entries, obs) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("in-view");
                obs.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.15 }
        );

        revealEls.forEach((el) => observer.observe(el));
      });
    </script>
  </body>
</html>

<style is:global>
  /* =========================
     LOCAL FONT: PIXELIFY SANS (MEDIUM)
     ========================= */



     @font-face {
  font-family: "ArcadeClassic";
  src:
    url("/fonts/ARCADECLASSIC2.woff2") format("woff2"),
    url("/fonts/ARCADECLASSIC2.woff") format("woff"),
    url("/fonts/ARCADECLASSIC2.ttf") format("truetype");
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

  @font-face {
    font-family: "PixelifySans";
    src: url("/fonts/PixelifySans-Medium.ttf") format("truetype");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  /* =========================
     GLOBAL STYLES
     ========================= */
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: url("/baggrund.gif") center / cover no-repeat fixed;
    color: #fff;
    font-family: "Aldrich", sans-serif;
  }

  /* =========================
     TYPOGRAPHY
     ========================= */

  /* ALL H1 */
  h1 {
    font-family: "PixelifySans", monospace;
    font-weight: 500;
    letter-spacing: 2px;
  }

  /* ALL OTHER TEXT */
  h2,
  h3,
  p,
  ul,
  li {
    font-family: "Aldrich", sans-serif;
  }

  /* =========================
     PRELOADER
     ========================= */
  #preloader {
    position: fixed;
    inset: 0;
    background: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    font-family: "PixelifySans", monospace;
    font-size: 2rem;
    text-transform: uppercase;
    letter-spacing: 3px;
  }

  .preloader-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .preloader-gif {
    width: 120px;
    height: auto;
    image-rendering: pixelated;
    filter: drop-shadow(0 0 8px #e803b2) drop-shadow(0 0 16px #e803b2);
  }

  .preloader-text {
    font-size: 1.25rem;
    text-shadow:
      0 0 6px #e803b2,
      0 0 12px #e803b2;
  }

  #preloader.hidden {
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.5s ease;
  }

  /* =========================
     REVEAL-ON-SCROLL (GLOBAL)
     ========================= */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  .reveal.in-view {
    opacity: 1;
    transform: translateY(0);
  }
</style>
