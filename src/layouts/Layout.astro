import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="da">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>The Clubhouse</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Aldrich&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <Header />
    <slot />
  </body>
</html>

<style is:global>
  /* =========================
     LOCAL FONT: PIXELIFY SANS (MEDIUM)
     ========================= */
  @font-face {
    font-family: 'PixelifySans';
    src: url('/fonts/PixelifySans-Medium.ttf') format('truetype');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  /* =========================
     GLOBAL STYLES
     ========================= */
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: url("/baggrund.gif") center / cover no-repeat fixed;
    color: #fff;
    font-family: 'Aldrich', sans-serif;
  }

  /* =========================
     TYPOGRAPHY
     ========================= */

  /* ALL H1 */
  h1 {
    font-family: 'PixelifySans', monospace;
    font-weight: 500;
    letter-spacing: 2px;
  }

  /* ALL OTHER TEXT */
  h2,
  h3,
  p,
  ul,
  li {
    font-family: 'Aldrich', sans-serif;
  }
</style>